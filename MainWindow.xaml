<Window x:Class="GitVersionControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Git Version Control GUI" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Title and Repository Selection -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Git Version Control GUI" FontSize="20" FontWeight="Bold" 
                       Foreground="#2D3748" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Repository Path:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"/>
                <TextBox x:Name="RepositoryPathTextBox" Width="400" IsReadOnly="True" 
                         Background="#F7FAFC" Text="No repository selected"/>
                <Button x:Name="BrowseButton" Content="Browse..." Click="BrowseButton_Click"/>
                <Button x:Name="InitButton" Content="Initialize Git Repo" Click="InitButton_Click"/>
                <Button x:Name="RefreshButton" Content="Refresh" Click="RefreshButton_Click" IsEnabled="False"/>
            </StackPanel>
        </StackPanel>
        
        <!-- Repository Status -->
        <Border Grid.Row="1" Background="#EDF2F7" BorderBrush="#CBD5E0" BorderThickness="1" 
                Padding="10" Margin="0,0,0,10" CornerRadius="4">
            <TextBlock x:Name="StatusTextBlock" Text="No repository loaded" FontStyle="Italic"/>
        </Border>
        
        <!-- Main Content Area -->
        <TabControl Grid.Row="2" Margin="0,10,0,0">
            <TabItem Header="Commit History">
                <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Commit History Panel -->
            <Border Grid.Column="0" BorderBrush="#CBD5E0" BorderThickness="1" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" Background="#4A5568" Padding="10">
                        <TextBlock Text="Commit History" Foreground="White" FontWeight="Bold" FontSize="14"/>
                    </Border>
                    
                    <TreeView x:Name="CommitHistoryTreeView" Grid.Row="1" 
                              SelectedItemChanged="CommitHistoryTreeView_SelectedItemChanged"
                              ScrollViewer.HorizontalScrollBarVisibility="Auto"
                              ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <TreeView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" Margin="2">
                                    <TextBlock Text="{Binding ShortId}" FontWeight="Bold" Foreground="#2B6CB0"/>
                                    <TextBlock Text="{Binding ShortMessage}" Foreground="#4A5568"/>
                                    <TextBlock Text="{Binding Author}" FontSize="10" Foreground="#718096"/>
                                    <TextBlock Text="{Binding FormattedDate}" FontSize="10" Foreground="#A0AEC0"/>
                                </StackPanel>
                            </DataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </Border>
            
            <!-- Splitter -->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="#CBD5E0"/>
            
            <!-- Commit Details Panel -->
            <Border Grid.Column="2" BorderBrush="#CBD5E0" BorderThickness="1" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Border Grid.Row="0" Background="#4A5568" Padding="10">
                        <TextBlock Text="Commit Details" Foreground="White" FontWeight="Bold" FontSize="14"/>
                    </Border>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
                        <StackPanel x:Name="CommitDetailsPanel">
                            <TextBlock Text="Select a commit to view details" 
                                       FontStyle="Italic" Foreground="#718096" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       x:Name="NoSelectionText"/>
                            
                            <StackPanel x:Name="DetailsContent" Visibility="Collapsed">
                                <TextBlock Text="Commit ID:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBox x:Name="CommitIdTextBox" IsReadOnly="True" Background="#F7FAFC" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="Author:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBox x:Name="AuthorTextBox" IsReadOnly="True" Background="#F7FAFC" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="Date:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBox x:Name="DateTextBox" IsReadOnly="True" Background="#F7FAFC" Margin="0,0,0,10"/>
                                
                                <TextBlock Text="Message:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBox x:Name="MessageTextBox" IsReadOnly="True" Background="#F7FAFC" 
                                         TextWrapping="Wrap" AcceptsReturn="True" MinHeight="100" 
                                         ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
            </TabItem>
            
            <TabItem Header="File Selection">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- File Selection Controls -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button x:Name="RefreshFilesButton" Content="Refresh Files" Click="RefreshFilesButton_Click" 
                                Margin="0,0,10,0" Padding="10,5"/>
                        <Button x:Name="SelectAllButton" Content="Select All" Click="SelectAllButton_Click" 
                                Margin="0,0,10,0" Padding="10,5"/>
                        <Button x:Name="DeselectAllButton" Content="Deselect All" Click="DeselectAllButton_Click" 
                                Margin="0,0,10,0" Padding="10,5"/>
                        <Button x:Name="StageSelectedButton" Content="Stage Selected" Click="StageSelectedButton_Click" 
                                Margin="0,0,10,0" Padding="10,5"/>
                        <Button x:Name="UnstageSelectedButton" Content="Unstage Selected" Click="UnstageSelectedButton_Click" 
                                Margin="0,0,10,0" Padding="10,5"/>
                    </StackPanel>
                    
                    <!-- File List -->
                    <DataGrid x:Name="FilesDataGrid" Grid.Row="1" AutoGenerateColumns="False" 
                              CanUserAddRows="False" CanUserDeleteRows="False" 
                              SelectionMode="Extended" GridLinesVisibility="All">
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected}" Width="60"/>
                            <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="200"/>
                            <DataGridTextColumn Header="Path" Binding="{Binding RelativePath}" Width="300"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- Commit Section -->
                    <Border Grid.Row="2" BorderBrush="#CBD5E0" BorderThickness="1" CornerRadius="4" 
                            Padding="10" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="Commit Changes" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Author Name:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                                <TextBox x:Name="AuthorNameTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Author Email:" VerticalAlignment="Center" Margin="0,0,10,5"/>
                                <TextBox x:Name="AuthorEmailTextBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Commit Message:" VerticalAlignment="Top" Margin="0,0,10,5"/>
                                <TextBox x:Name="CommitMessageTextBox" Grid.Row="2" Grid.Column="1" 
                                         TextWrapping="Wrap" AcceptsReturn="True" MinHeight="60" 
                                         ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="0,0,0,5"/>
                            </Grid>
                            <Button x:Name="CommitButton" Content="Commit Changes" Click="CommitButton_Click" 
                                    HorizontalAlignment="Right" Padding="15,8" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window> 